<body>

    <div class="header-container">
        <h1>Pesquisa de Produtos</h1>
        <img src="topo.jpg" alt="Imagem do Topo" class="top-image" onerror="this.style.display='none'">
        
        <div class="loader" id="loader"></div>
        <div id="status" class="status-msg">Conectando Ã  planilha...</div>
    </div>

    <div class="search-container" id="searchArea">
        <input type="text" id="searchInput" class="search-box" placeholder="Pesquisar por CÃ³digo ou Produto..." disabled>
    </div>

    <div class="results-container">
        <table id="dataTable">
            <thead><tr id="tableHeader"></tr></thead>
            <tbody id="tableBody"></tbody>
        </table>
    </div>

    <script>
        // =================================================================
        // CONFIGURAÃ‡ÃƒO: COLE SEU LINK COM PROXY ABAIXO
        // Exemplo: "https://corsproxy.io/?https://docs.google.com/..."
        // =================================================================
        const LINK_DA_PLANILHA = ""; 
        const SENHA_MESTRE = "1234";
        // =================================================================

        let productsData = [];
        let headers = [];
        let custoLiberado = false; 
        const searchInput = document.getElementById('searchInput');
        const statusMsg = document.getElementById('status');
        const loader = document.getElementById('loader');

        window.addEventListener('DOMContentLoaded', () => {
            if (LINK_DA_PLANILHA === "") {
                statusMsg.innerText = "ERRO: Link da planilha nÃ£o configurado.";
                statusMsg.style.color = "red";
                return;
            }
            loadCSV();
        });

        function loadCSV() {
            loader.style.display = 'block';
            statusMsg.innerText = "Atualizando dados...";

            fetch(LINK_DA_PLANILHA)
                .then(response => {
                    if (!response.ok) throw new Error("Erro ao acessar planilha.");
                    return response.arrayBuffer(); 
                })
                .then(buffer => {
                    const decoder = new TextDecoder('utf-8'); 
                    const text = decoder.decode(buffer);
                    parseCSV(text);
                })
                .catch(error => {
                    console.error("Erro:", error);
                    loader.style.display = 'none';
                    statusMsg.innerText = "Erro ao carregar. Verifique o link.";
                    statusMsg.style.color = "red";
                });
        }

        function parseCSV(text) {
            const lines = text.split('\n').filter(line => line.trim() !== '');
            if (lines.length === 0) return;

            const firstLine = lines[0];
            const separator = firstLine.includes(';') ? ';' : ','; 
            headers = firstLine.split(separator).map(h => h.trim());
            
            productsData = lines.slice(1).map(line => {
                const regex = new RegExp(`(?:${separator}|\\r?\\n|^)(?:"([^"]*)"|([^"${separator}\\r\\n]*))`, 'gi');
                let matches = [];
                let matched;
                while (matched = regex.exec(line)) {
                    let val = matched[1] ? matched[1] : matched[2];
                    matches.push(val ? val.trim() : "");
                }
                let obj = {};
                headers.forEach((header, index) => {
                    let val = matches[index] || "";
                    if (val.startsWith('"') && val.endsWith('"')) val = val.substring(1, val.length - 1);
                    obj[header] = val;
                });
                return obj;
            });

            setupTableHeaders();
            loader.style.display = 'none';
            statusMsg.innerText = `${productsData.length} itens carregados.`;
            searchInput.disabled = false;
            searchInput.focus();
        }

        function setupTableHeaders() {
            const tr = document.getElementById('tableHeader');
            tr.innerHTML = '';
            headers.forEach(header => {
                const th = document.createElement('th');
                th.innerText = header;
                tr.appendChild(th);
            });
        }

        function limparTexto(texto) {
            if (!texto) return "";
            return texto.toString().toLowerCase().normalize('NFD').replace(/[\u0300-\u036f]/g, "");
        }

        function tentarDesbloquear() {
            if (custoLiberado) return; 
            const senhaDigitada = prompt("Senha para custos:");
            if (senhaDigitada === SENHA_MESTRE) {
                custoLiberado = true;
                filterData(searchInput.value); 
            } else {
                alert("Senha incorreta.");
            }
        }

        searchInput.addEventListener('keyup', (e) => filterData(e.target.value));

        function filterData(query) {
            const tbody = document.getElementById('tableBody');
            tbody.innerHTML = ''; 

            if (query.length === 0) {
                 statusMsg.innerText = `${productsData.length} itens disponÃ­veis.`;
                 return;
            }

            const terms = limparTexto(query).split(' ').filter(t => t.length > 0);

            const filtered = productsData.filter(item => {
                // --- NOVA LÃ“GICA DE FILTRO ---
                // Criamos um texto apenas com os valores das colunas 'Codigo' ou 'Produto'
                let textoParaBusca = "";
                headers.forEach(h => {
                    const hLimpo = limparTexto(h);
                    if (hLimpo === "codigo" || hLimpo === "produto") {
                        textoParaBusca += " " + item[h];
                    }
                });
                
                const itemTextoLimpo = limparTexto(textoParaBusca);
                return terms.every(term => itemTextoLimpo.includes(term));
            });

            if (filtered.length === 0) {
                 statusMsg.innerText = "Nenhum resultado encontrado.";
                 return;
            }

            filtered.slice(0, 500).forEach(item => {
                const tr = document.createElement('tr');
                headers.forEach(header => {
                    const td = document.createElement('td');
                    if (header.toLowerCase().includes("custo")) {
                        if (custoLiberado) {
                            td.innerText = item[header];
                            td.classList.add("unlocked-cost");
                        } else {
                            td.innerHTML = "ðŸ”’ Ver";
                            td.classList.add("locked-cell");
                            td.onclick = tentarDesbloquear; 
                        }
                    } else {
                        td.innerText = item[header];
                    }
                    tr.appendChild(td);
                });
                tbody.appendChild(tr);
            });
             
            statusMsg.innerText = `${filtered.length} resultados encontrados.`;
        }
    </script>
</body>
</html>
